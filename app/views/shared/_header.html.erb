            <li class="list-group-item nav-item text-bg-warning"><%= link_to "お気に入り一覧", favorited_places_path, class: "text-dark nav-link fs-6" %></li>
            <li class="list-group-item nav-item text-bg-warning"><%= link_to "アカウント設定",  edit_user_registration_path,  class: "text-dark nav-link fs-6" %></li>
            <li class="list-group-item nav-item text-bg-warning"><%= link_to "ログアウト",  destroy_user_session_path, data: { turbo_method: :delete }, class: "text-dark nav-link fs-6" %></li>
          </ul>
        <% end %>
        <% if user_signed_in? %>
          <div class="header-button d-flex justify-content-center">
            <div class="d-none d-lg-block">
              <%= link_to new_place_path, id: "place-new-link", class: "btn btn-outline-light me-2", data: { turbo: false } do %>
                <%= image_tag 'orangepig.png', class:"rounded-circle", size:"40x40" %>
                おでかけ場所を登録
              <% end %>
            </div>
            <div class="dropdown d-none d-lg-block">
              <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenu1" data-bs-toggle="dropdown" aria-expanded="false">
                <% if current_user.image? %>
                  <%= image_tag current_user.image.url, class:"rounded-circle", size:"40x40" %>
                <% else %>
                  <%= image_tag 'person-circle.svg', class:"rounded-circle", size:"40x40" %>
                <% end %>
                <%= current_user.name %>
              </button>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                <li><%= link_to "HOME", root_path,  class: "dropdown-item" %></li>
                <li><hr class="dropdown-driver"></li>
                <li><%= link_to "投稿済み一覧", own_places_path, class: "dropdown-item" %></li>
                <li><%= link_to "お気に入り一覧", favorited_places_path, class: "dropdown-item" %></li>
                <li><%= link_to "アカウント設定",  edit_user_registration_path,  class: "dropdown-item" %></li>
                <li><hr class="dropdown-driver"></li>
                <li><%= link_to "ログアウト",  destroy_user_session_path, data: { turbo_method: :delete }, class: "dropdown-item" %></li>
              </ul>
            </div>
          </div>
        <% else %>
          <div class="d-flex justify-content-center my-3 my-lg-0">
            <%= link_to 'ゲストログイン(閲覧用)', users_guest_sign_in_path, data: { turbo_method: :post }, class: "btn btn-dark me-2" %>
            <%= link_to 'ログイン', new_user_session_path, class: "btn btn-outline-light me-2" %>
            <%= link_to '新規登録', new_user_registration_path, class: "btn btn-light me-2" %>
          </div>
        <% end %>
      </div>
    </div>
  </nav>
</div>













