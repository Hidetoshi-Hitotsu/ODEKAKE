<%= render 'shared/map' %>
<div class="container d-flex">
<%# 検索エリア %>
  <div class="searchFormArea w-35">
    <h3>おでかけ場所を探そう</h3>
    <div class="searchBox">
      <%= form_with(url: root_path, local: true, method: :get ,class:"") do |f| %>
        <%= f.text_field :keyword, class:"", placeholder: 'キーワードを入力'%>
        <%= f.submit "検索", class:"btn btn-secondary" %>
      <% end %>
    </div>
    <div class="searchCheckBox">
    </div>
  </div>
<%# 人気の投稿エリア %>
  <div class="popularPostsBox w-60">
    <h3>人気の投稿</h3>
  </div>
</div>
<%# 新規投稿エリア %>
<div class="container">
  <h3>おでかけ場所新規投稿</h3>
  <%= form_with model: @place do |f| %>
    <table>
      <tr>
        <th><%= f.label :name ,"場所の名前" %></th>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <th><%= f.label :address ,"住所" %></th>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <th><%= f.label :description ,"どんな場所？" %></th>
        <td><%= f.text_area :description %></td>
      </tr>
    </table>
    <div>
      <ul>
        <li><%= f.submit "登録完了する" %></li>
      </ul>
    </div>
  <% end %>
</div>
