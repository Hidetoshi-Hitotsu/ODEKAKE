<div class="d-flex justify-content-center">
  <div class="d-flex my-4 text-center card container-xs w-75 shadow">
    <main class="form-signin w-75 m-auto card-body">
      <%= image_tag "person-circle.svg",  alt: "画像", width: "80px", class: "text-primary-emphasis" %>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
        <div class="field form-floating my-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Eメール" %>
          <%= f.label :email, for: "floatingInput" %>
        </div>
        <div class="field form-floating">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "パスワード" %>
          <%= f.label :password, for: "floatingInput" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field my-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit t('.sign_in'), class: "btn btn-warning w-100 py-2" %>
        </div>
      <% end %>
      <div class="d-grid mt-3 gap-1">
        <%= render "devise/shared/links" %>
      </div>
      <p class="mt-3 text-body-secondary">&copy; 2023</p>
    </main>
  </div>
</div>
